# Global options
mk_add_options MOZ_MAKE_FLAGS="-j9"

# Build Fennec
ac_add_options --enable-application=mobile/android
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-android

# Android
ac_add_options --target=arm-linux-androideabi
ac_add_options --with-android-ndk="$HOME/android/ndk"
ac_add_options --with-android-sdk="$HOME/android/sdk/platforms/android-22"
ac_add_options --with-android-version=9
ac_add_options --with-android-min-sdk=9
ac_add_options --with-android-max-sdk=10
ac_add_options --enable-android-resource-constrained

export MOZ_DISABLE_GECKOVIEW=1

# Build options
ac_add_options --disable-elf-hack
ac_add_options --enable-warnings-as-errors

# Use ccache
ac_add_options --with-ccache
